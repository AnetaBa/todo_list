<h1>Dodaj zadanie</h1>

<% @to_do.errors.full_messages.each do |error| %>
  <p class="errors"><%= error %></p>
<% end %>
<%= form_for(@to_do) do |f| %>
  <div>
    <%= f.label :sumary %>
    <%= f.text_field :sumary, {:maxlength => 15} %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description,  {:maxlength => 50} %>
  </div>
  <%= f.submit "save" %>
<% end %>
